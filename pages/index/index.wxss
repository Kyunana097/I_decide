.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 转盘容器 - 相对定位 */
.wheel-container {
  position: relative;
  width: 600rpx;
  height: 600rpx;
  margin-bottom: 80rpx;
}

/* 大圆 - 转盘背景 */
.wheel {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  background: #00ff9d;
  border: 8rpx solid #333;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
}

/* 转盘分区 */
.wheel-section {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  transform-origin: 50% 50%;
  opacity: 1;
  transition: transform 4000ms cubic-bezier(0.25, 0.1, 0.25, 1);
  z-index: 2;
}

/* 分区1文字：放在扇形内部，跟随一起旋转 */
.sector1-label {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
}

/* 分区2文字：固定在转盘底部附近，不随指针移动 */
.sector2-label {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #333333;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  z-index: 1;
}

/* 扇形指针 - 绝对定位居中 */
.pointer {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  transition: transform 4000ms cubic-bezier(0.25, 0.1, 0.25, 1);
  z-index: 5;
}

/* 指针三角形 - 位于顶部 */
.pointer-triangle {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 30rpx solid transparent;
  border-right: 30rpx solid transparent;
  border-top: 80rpx solid #ff0000;
  filter: drop-shadow(0 4rpx 6rpx rgba(0,0,0,0.3));
}

/* 中心固定点 */
.center-dot {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  background: #333;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.3);
  z-index: 10;
}

/* 结果 */
.result {
  margin-top: 40rpx;
  font-size: 40rpx;
  color: #333;
}

.config-btn {
  margin-top: 24rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ffffff;
  color: #23df52;
  border-radius: 40rpx;
  border: 2rpx solid #23df52;
  font-size: 32rpx;
}

.config-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.config-panel {
  width: 600rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.config-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 24rpx;
}

.config-row {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.config-label {
  min-width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

.config-input {
  flex: 1;
  margin-left: 16rpx;
  padding: 8rpx 12rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.config-row-note {
  justify-content: flex-start;
  font-size: 24rpx;
  color: #666;
}

.config-actions {
  margin-top: 32rpx;
  display: flex;
  justify-content: flex-end;
}

.config-actions button + button {
  margin-left: 24rpx;
}

/* 按钮 */
.spin-btn {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #23df52;
  color: white;
  border-radius: 50rpx;
  font-size: 40rpx;
  border: none;
}

.spin-btn[disabled] {
  background: #ccc;
}
/* 彩纸动画遮罩层 */
.confetti-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 200;
  overflow: hidden;
}

/* 单个彩纸条 */
.confetti-item {
  position: absolute;
  will-change: transform, opacity;
  animation-fill-mode: forwards;
}

/* 基础下落动画 - 只定义开始和结束，中间完全由浏览器插值 */
.confetti-fall {
  animation-name: confetti-drop;
  animation-timing-function: linear; /* 线性让旋转更均匀 */
}

/* 核心动画：只有开始和结束两个关键帧，配合不同的初始速度实现多样性 */
@keyframes confetti-drop {
  0% {
    /* 初始状态：屏幕上方，随机旋转角度由 JS 注入 */
    transform: translateY(-10vh) rotate(var(--start-rotate, 0deg));
    opacity: 0;
  }
  8% {
    opacity: 1; /* 快速淡入 */
  }
  92% {
    opacity: 1; /* 保持可见直到接近底部 */
  }
  100% {
    /* 结束状态：屏幕下方，旋转多圈，水平漂移 */
    transform: translateY(110vh) translateX(var(--drift-x, 0)) rotate(var(--end-rotate, 360deg));
    opacity: 0;
  }
}

/* 轻微摇摆变体 - 使用正弦波模拟飘动 */
.confetti-sway-1 {
  animation-name: sway-1;
  animation-timing-function: ease-in; /* 自然加速 */
}

.confetti-sway-2 {
  animation-name: sway-2;
  animation-timing-function: ease-in;
}

@keyframes sway-1 {
  0% {
    transform: translateY(-10vh) translateX(0) rotate(0deg);
    opacity: 0;
  }
  5% {
    opacity: 1;
  }
  100% {
    /* 向右漂移同时下落，旋转两圈 */
    transform: translateY(110vh) translateX(15vw) rotate(720deg);
    opacity: 0;
  }
}

@keyframes sway-2 {
  0% {
    transform: translateY(-10vh) translateX(0) rotate(0deg);
    opacity: 0;
  }
  5% {
    opacity: 1;
  }
  100% {
    /* 向左漂移 */
    transform: translateY(110vh) translateX(-15vw) rotate(-720deg);
    opacity: 0;
  }
}

/* 螺旋下降 */
.confetti-spiral {
  animation-name: spiral-fall;
  animation-timing-function: linear;
}

@keyframes spiral-fall {
  0% {
    transform: translateY(-10vh) translateX(0) rotate(0deg) scale(1);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  100% {
    /* 螺旋轨迹：X轴来回摆动，Y轴下落，持续旋转，轻微缩小 */
    transform: translateY(110vh) translateX(20vw) rotate(1080deg) scale(0.6);
    opacity: 0;
  }
}